<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="payment_service_1" author="your_name">
        <createTable tableName="payment">
            <column name="payment_id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)" defaultValue="RUB">
                <constraints nullable="false"/>
            </column>
            <column name="payment_method" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="external_payment_id" type="VARCHAR(100)"/>
            <column name="description" type="VARCHAR(500)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="payment_service_2" author="your_name">
        <createTable tableName="wallet_transaction">
            <column name="transaction_id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="related_entity_type" type="VARCHAR(50)"/>
            <column name="related_entity_id" type="INTEGER"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="payment_service_3" author="your_name">
        <createIndex tableName="payment" indexName="idx_payment_user">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="payment" indexName="idx_payment_status">
            <column name="status"/>
        </createIndex>
        <createIndex tableName="payment" indexName="idx_payment_external_id">
            <column name="external_payment_id"/>
        </createIndex>

        <createIndex tableName="wallet_transaction" indexName="idx_wallet_transaction_user">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="wallet_transaction" indexName="idx_wallet_transaction_type">
            <column name="type"/>
        </createIndex>
        <createIndex tableName="wallet_transaction" indexName="idx_wallet_transaction_related">
            <column name="related_entity_type"/>
            <column name="related_entity_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>