<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="billing_service_1" author="your_name">
        <createTable tableName="tariff">
            <column name="tariff_id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="price_per_hour" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="is_vip" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="billing_service_2" author="your_name">
        <createTable tableName="session">
            <column name="session_id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="pc_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="tariff_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIMESTAMP"/>
            <column name="total_cost" type="DECIMAL(10,2)"/>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="session"
                baseColumnNames="tariff_id"
                constraintName="fk_session_tariff"
                referencedTableName="tariff"
                referencedColumnNames="tariff_id"/>
    </changeSet>

    <changeSet id="billing_service_3" author="your_name">
        <createIndex tableName="session" indexName="idx_session_user">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="session" indexName="idx_session_pc">
            <column name="pc_id"/>
        </createIndex>
        <createIndex tableName="session" indexName="idx_session_tariff">
            <column name="tariff_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>