<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="user_service_1" author="your_name">
        <createTable tableName="users">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="VARCHAR(20)">
                <constraints unique="true" nullable="true"/>
            </column>
            <column name="full_name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="wallet" type="DECIMAL(10,2)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="photo_path" type="VARCHAR(500)"/>
            <column name="bonus_coins" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="registration_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="birthday_date" type="DATE"/>
            <column name="last_login" type="TIMESTAMP"/>
            <column name="is_online" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_banned" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="int" defaultValue="1">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="user_service_2" author="your_name">
        <createIndex tableName="users" indexName="idx_users_login">
            <column name="login"/>
        </createIndex>
        <createIndex tableName="users" indexName="idx_users_email">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <changeSet id="user_service_3" author="your_name">
        <createTable tableName="review">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"
                  foreignKeyName="fk_review_user"
                  referencedTableName="users"
                  referencedColumnNames="id"/>
            </column>
            <column name="review_text" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="stars" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="is_visible" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="user_service_4" author="your_name">
        <createIndex tableName="review" indexName="idx_review_user_id">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="review" indexName="idx_review_created_at">
            <column name="created_at"/>
        </createIndex>
        <createIndex tableName="review" indexName="idx_review_visible">
            <column name="is_visible"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>